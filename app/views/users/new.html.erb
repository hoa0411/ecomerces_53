<% provide :title, t("users.signup") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name, t("users.name")%>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("users.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :phone, t("users.phone") %>
      <%= f.phone_field :phone, class: "form-control" %>

      <%= f.label :password, t("users.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("users.confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("users.create_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
