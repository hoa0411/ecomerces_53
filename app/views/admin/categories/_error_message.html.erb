<% if @category.errors.any? %>
  <div class="error_explanation">
    <div class="alert alert-danger">
        The form contains <%= pluralize(@category.errors.size, (t "error")) %>.
    </div>
    <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
