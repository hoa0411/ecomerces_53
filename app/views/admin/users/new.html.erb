<% provide(:title, (t ".title") ) %>
<h1><%= t".title" %></h1>

<div class="row">
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
    <%= form_for [:admin, @user] do |f| %>
      <%= render "admin/users/error_message" %>

      <%= f.label :name, t("users.name")%>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("users.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :phone, t("users.phone") %>
      <%= f.phone_field :phone, class: "form-control" %>

      <%= f.label :password, t("users.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("users.confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit (t ".button"), class: "btn btn-primary" %>
      <% end %>
  </div>
</div>
